{
    "manifest_version": 3,
    "name": "돋보기 확장 프로그램",
  "version": "0.1",
  "description": "웹 페이지에서 돋보기를 사용할 수 있습니다.",
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "magnifier_16.png",
        "32": "magnifier_32.png",
        "48": "magnifier_48.png",
        "128": "magnifier_128.png"
      }
    },
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "icons": {
      "16": "magnifier_16.png",
      "32": "magnifier_32.png",
      "48": "magnifier_48.png",
      "128": "magnifier_128.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    }
  }
  